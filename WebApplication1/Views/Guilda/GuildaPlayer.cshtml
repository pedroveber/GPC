@model GPCLib.Models.GuildaPlayerModels

@{
    ViewBag.Title = "GuildaPlayer";
}

<script type="text/javascript">
        $(document).ready(
            function () {
                $('#btnAdd').click(
                    function (e) {
                        $('#lstTodosUsuarios > option:selected').appendTo('#myList');
                        e.preventDefault();
                    });

                $('#btnAddAll').click(
                    function (e) {
                        $('#lstTodosUsuarios > option').appendTo('#myList');
                        e.preventDefault();
                    });

                $('#btnRemove').click(
                    function (e) {
                        $('#myList > option:selected').appendTo('#lstTodosUsuarios');
                        e.preventDefault();
                    });

                $('#btnRemoveAll').click(
                    function (e) {
                        $('#myList > option').appendTo('#lstTodosUsuarios');
                        e.preventDefault();
                    });

                $("#myForm").submit(function (e) {

                    $("#myList option").prop("selected", "selected");

                });
            });

        

</script>


<h2>GuildaPlayer</h2>

<div>
    <h4>GuildaPlayerModels</h4>
    <hr />
    <dl class="dl-horizontal"></dl>
</div>
