@model GPCLib.Models.ResultadoGeralModels

<script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.js"></script>
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.15/css/jquery.dataTables.css">

@{
    ViewBag.Title = "ResultadoGeral";
}

<script>
    $(document).ready(function () {
        $('#tabelaResultadoGeral').DataTable(
            {
                "language": {
                    search: "Pesquisar:",
                    "lengthMenu": "Exibindo _MENU_ linhas por página",
                    "zeroRecords": "Nenhum registro encontrado",
                    "info": "Exibindo página _PAGE_ de _PAGES_",
                    "infoFiltered": "(selecionado _MAX_ registros)",
                    paginate: {
                        first: "Primeira",
                        previous: "Anterior",
                        next: "Próxima",
                        last: "Última"
                    }
                },
                "pageLength": 50,



            }

            );

    });

</script>

<h2>ResultadoGeral</h2>
<p></p>

<div class="container">
    <div class="row">
        <div class="col-md-12" style="text-align:right">
            <h1>
                @Html.DisplayFor(Model => Model.Batalha.GuildaAtacante.Nome) x @Html.DisplayFor(Model => Model.Batalha.GuildaOponente) -
                @if (Model.Batalha.Vitoria)
            {
                    @:Vitória
            }
            else
            {
                    @:Derrota
            }
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" style="text-align:right">
            <h4>
                @Html.DisplayFor(Model => Model.Batalha.Data)
            </h4>
        </div>

    </div>
    <p></p>

    <div class="row">
        <div class="col-md-12">
            <table class="table" id="tabelaResultadoGeral">
                <thead>
                    <tr>
                        <th>Player</th>
                        <th style="text-align:center;">
                            Bônus
                        </th>
                        <th style="text-align:center;">
                            Lutas
                        </th>
                        <th style="text-align:center;">
                            Vitórias
                        </th>
                        <th style="text-align:center;">
                            Empate
                        </th>
                        <th style="text-align:center;">
                            Derrota
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Item)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Player.Nome)
                            </td>
                            <td style="text-align:center;">
                                @Html.DisplayFor(modelItem => item.Bonus)
                            </td>
                            <td style="text-align:center;">
                                @Html.DisplayFor(modelItem => item.NumeroLutas)
                            </td>
                            <td style="text-align:center;">
                                @Html.DisplayFor(modelItem => item.Vitoria)
                            </td>
                            <td style="text-align:center;">
                                @Html.DisplayFor(modelItem => item.Empate)
                            </td>
                            <td style="text-align:center;">
                                @Html.DisplayFor(modelItem => item.Derrota)
                            </td>

                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
<p></p>
<div>
    @Html.ActionLink("<< Voltar", "ListaBatalhas")
</div>